            </li>
            <li>
                <a href="#" class="social-twitter">
                    <i class="fa fa-twitter"></i>
                    <span>10.2K<br>Followers</span>
                </a>
            </li>
            <li>
                <a href="#" class="social-google-plus">
                    <i class="fa fa-google-plus"></i>
                    <span>5K<br>Followers</span>
                </a>
            </li>
        </ul>
    </div>
</div>
<!-- /social widget -->
<!-- category widget -->
<div class="aside-widget">
    <div class="section-title">
        <h2 class="title">Tags</h2>
    </div>
    <div class="category-widget">
        <ul>
            @if (Model.TagCounts != null)
            {
                foreach (string item in Model.TagCounts)
                {
                    <li><a href="#">@item.Split('$')[0]<span>@item.Split('$')[1]</span></a></li>
                }

            }

        </ul>
    </div>
</div>
<!-- /category widget -->
<!-- post widget -->
<div class="aside-widget">
    <div class="section-title">
        <h2 class="title">Bài viết phổ biến</h2>
    </div>
    @if (Model.PopularPosts != null)
    {
        foreach (PostViewModel item in Model.PopularPosts)
        {
            <!-- post -->
            <div class="post post-widget">
                <a class="post-img" href="@domainName/@item.SLUG"><img src="~/Content/@item.IMAGE_COVER" alt=""></a>
                <div class="post-body">
                    <div class="post-category">
                        <a href="#">@item.MAIN_TAG</a>
                    </div>
                    <h3 class="post-title"><a href="@domainName/@item.SLUG">@item.TITLE</a></h3>
                </div>
            </div>
            <!-- /post -->
        }
    }

</div>
<!-- /post widget -->
